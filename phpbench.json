{
    "$schema": "./vendor/phpbench/phpbench/phpbench.schema.json",
    "runner.bootstrap": "vendor/autoload.php",
    "runner.path": "tests/benchmark",
    "runner.php_config": {
        "memory_limit": "1G"
    },
    "report.generators": {
        "default": {
            "extends": "aggregate",
            "cols": [
                "benchmark",
                "subject",
                "set",
                "revs",
                "its",
                "mem_peak",
                "best",
                "mean",
                "mode",
                "worst",
                "stdev",
                "rstdev"
            ]
        }
    }
}
